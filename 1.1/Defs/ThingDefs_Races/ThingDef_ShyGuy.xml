<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="AnimalThingBase">
		<defName>O21_ShyGuy</defName>
		<label>shy guy</label>
		<description>Fast tiny humanoids, these shy guys have been known to obliterate unprepared colonies with their speed and numbers.</description>
        <statBases>
            <PsychicSensitivity>0.5</PsychicSensitivity>
            <ToxicSensitivity>0</ToxicSensitivity>
            <Flammability>0</Flammability>
            <ComfyTemperatureMin>-100</ComfyTemperatureMin>
            <ComfyTemperatureMax>250</ComfyTemperatureMax>
            <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
            <ArmorRating_Heat>1.50</ArmorRating_Heat>
        </statBases>
        <race>
            <needsRest>false</needsRest>
            <hasGenders>false</hasGenders>
            <foodType>None</foodType>
			<body>Human</body>
            <intelligence>ToolUser</intelligence>
            <thinkTreeMain>Mechanoid</thinkTreeMain>
            <baseBodySize>0.5</baseBodySize>
			<baseHealthScale>0.5</baseHealthScale>

            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                </li>
            </lifeStageAges>

			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
        </race>
        <butcherProducts>
            <Cloth>10</Cloth>
            <Steel>5</Steel>
            <WoodLog>3</WoodLog>
        </butcherProducts>
        <receivesSignals>true</receivesSignals>
		<tools>
			<li>
				<label>left fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>12.0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>right fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>12.0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8.5</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
	</ThingDef>

