<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Abstract="True" Name="BaseKoopaWeapon">
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<drawGUIOverlay>true</drawGUIOverlay>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>true</alwaysHaulable>
		<tickerType>Never</tickerType>
		<equipmentType>Primary</equipmentType>
		<useHitPoints>true</useHitPoints>
		<pathCost>10</pathCost>
		<selectable>true</selectable>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<Mass>2</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-3</Beauty>
			<SellPriceFactor>0.20</SellPriceFactor>
		</statBases>
		<smeltable>true</smeltable>
		<burnableByRecipe>true</burnableByRecipe>
		<comps>		
			<li Class="CompProperties_Forbiddable"/>	
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponMelee</nameMaker>
				<descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
		<equippedAngleOffset>-25</equippedAngleOffset>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
        <thingCategories Inherit="False">
            <li>WeaponsRanged</li>
        </thingCategories>
	</ThingDef>

	<ThingDef ParentName="BaseKoopaWeapon">
        <defName>O21_KoopaHammer</defName>
        <label>koopa hammer</label>
		<description>A simple hammer.</description>
        <graphicData>
            <texPath>Weapons/HammerBro/Hammer</texPath>
            <drawSize>1.0</drawSize>
        </graphicData>
		<weaponTags Inherit="False">
			<li>HammerBro</li>
		</weaponTags>
		<soundInteract>Bow_Small</soundInteract>
		<statBases>
			<MarketValue>1</MarketValue>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>O21_KoopaHammerProjectile</defaultProjectile>
				<warmupTime>1.35</warmupTime>
				<range>19.9</range>
				<soundCast>Bow_Small</soundCast>
			</li>
		</verbs>
		<tools>
			<li>
				<label>pipe</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
		
	<ThingDef ParentName="BaseProjectileNeolithic">
		<defName>O21_KoopaHammerProjectile</defName>
		<label>koopa hammer</label>
		<graphicData>
			<texPath>Projectiles/HammerBro</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Blunt</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<speed>38</speed>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseKoopaWeapon">
        <defName>O21_KoopaFire</defName>
        <label>koopa fire</label>
		<description>Casting ability for Koopas to throw fire.</description>
        <graphicData>
            <texPath>Alpha</texPath>
            <drawSize>1.0</drawSize>
        </graphicData>
		<weaponTags Inherit="False">
			<li>FireBro</li>
		</weaponTags>
		<soundInteract>InfernoCannon_Fire</soundInteract>
		<statBases>
			<MarketValue>1</MarketValue>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>O21_KoopaFireProjectile</defaultProjectile>
				<warmupTime>1.35</warmupTime>
				<range>19.9</range>
				<soundCast>InfernoCannon_Fire</soundCast>
			</li>
		</verbs>
		<tools>
			<li>
				<label>pipe</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
		
	<ThingDef ParentName="BaseProjectileNeolithic">
		<defName>O21_KoopaFireProjectile</defName>
		<label>koopa fire</label>
		<graphicData>
			<texPath>Projectiles/FireBro</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Flame</damageDef>
            <explosionRadius>2.1</explosionRadius>
			<damageAmountBase>10</damageAmountBase>
			<speed>65</speed>
            <ai_IsIncendiary>true</ai_IsIncendiary>
		</projectile>
	</ThingDef>

    </Defs>